<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activities.MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar_mt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
            app:subtitleTextColor="@color/white"
            app:titleTextColor="@color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/window_cl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- TODO Main fragment -->
        <FrameLayout
            android:id="@+id/main_screen_fl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top" />

        <com.kam.musicplayer.view.customview.BottomSheetView
            android:id="@+id/music_screen_bsv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"


            android:elevation="12dp">

            <!-- TODO Mini Music Player -->
            <fragment
                android:id="@+id/mini_mpf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:id="@+id/queue_screen_cl"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- TODO Music Player -->
                <fragment
                    android:id="@+id/music_screen_msf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.kam.musicplayer.view.customview.BottomSheetView
                    android:id="@+id/queue_screen_bsv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"

                    >

                    <!-- TODO Up Next -->
                    <include
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <tag
                            android:id="@id/tag_bottom_sheet_draggable"
                            android:value="true" />

                    </include>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <!-- TODO Mini Player for the Queue Screen -->
                        <fragment
                            android:id="@+id/queue_mini_mpf"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="24dp"
                            android:gravity="center"
                            android:text="@string/up_next"
                            android:background="@color/up_next_background"/>

                        <!-- TODO Queue Fragment -->
                        <fragment
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"

                            />

                    </LinearLayout>

                </com.kam.musicplayer.view.customview.BottomSheetView>

            </androidx.coordinatorlayout.widget.CoordinatorLayout>

        </com.kam.musicplayer.view.customview.BottomSheetView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</LinearLayout>