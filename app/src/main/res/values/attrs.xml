        <attr name="viewToDrag" format="reference" />
        <attr name="content" format="reference" />
        <attr name="background_color" format="color" />
        <attr name="shrink_content_to_above_screen" format="boolean" />
    </declare-styleable>

    <!-- BottomSheetView Tags -->
    <item name="tag_bottom_sheet_draggable" type="id" />

    <!-- Style Tags -->
    <attr name="actionBarBackground" format="reference|color" />
    <attr name="colorPrimaryText" format="reference|color" />
    <attr name="colorSecondaryText" format="reference|color" />

    <attr name="colorSpecial" format="reference|color" />

    <attr name="screenBackground" format="reference|color" />
    <attr name="colorCardBackground" format="reference|color" />
    <attr name="itemCardBackground" format="reference|color" />

    <attr  name="colorDeselected" format="reference|color" />
    <attr  name="colorSelected" format="reference|color" />

    <attr name="colorDivider" format="reference|color" />
    <attr name="colorSpecialBackground" format="reference|color" />

</resources>